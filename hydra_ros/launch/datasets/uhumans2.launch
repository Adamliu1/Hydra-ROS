<launch>
    <arg name="sim_time_required" default="true"/>
    <param name="use_sim_time" value="$(arg sim_time_required)"/>

    <arg name="use_gt_frame" default="true"/>
    <arg name="use_gt_semantics" default="true"/>
    <arg name="robot_frame" default="base_link_kimera" unless="$(arg use_gt_frame)"/>
    <arg name="robot_frame" default="base_link_gt" if="$(arg use_gt_frame)"/>
    <arg name="odom_frame" default="world" if="$(arg use_gt_frame)"/>
    <arg name="sensor_frame" default="left_cam" if="$(arg use_gt_frame)"/>
    <arg name="sensor_frame" default="left_cam_kimera" unless="$(arg use_gt_frame)"/>
    <arg name="use_image_interface" default="false"/>

    <!-- simulator semantics -->
    <arg name="labelspace_name" default="uhumans2_office" if="$(arg use_gt_semantics)"/>
    <arg name="semantic_map_dir" default="$(find hydra_ros)/config/color"/>
    <arg name="semantic_map_file" default="$(arg labelspace_name).csv"/>
    <arg name="semantic_map_path" default="$(arg semantic_map_dir)/$(arg semantic_map_file)"
         if="$(arg use_gt_semantics)"/>

    <!-- non-gt semantics -->
    <arg name="labelspace_name" default="ade20k_mp3d" unless="$(arg use_gt_semantics)"/>
    <arg name="semantic_map_path"
         default="$(find semantic_recolor)/config/colors/$(arg labelspace_name).csv"
         unless="$(arg use_gt_semantics)"/>
    <arg name="pointcloud_topic" default="semantic_pointcloud"/>

    <arg name="rgb_topic" default="/tesse/left_cam/rgb/image_raw" if="$(arg use_image_interface)"/>
    <arg name="rgb_info_topic" default="/tesse/left_cam/camera_info"/>
    <arg name="depth_topic" default="/tesse/depth_cam/mono/image_raw"/>
    <arg name="label_topic" default="/semantic/image_raw" unless="$(arg use_gt_semantics)"/>
    <arg name="label_topic" default="/tesse/seg_cam/rgb/image_raw" if="$(arg use_gt_semantics)"/>
    <arg name="prerecorded_topic" default="/oneformer/labels/image_raw"/>

    <include file="$(find hydra_ros)/launch/sources/uhumans2_pointcloud.launch" pass_all_args="true"/>

    <include file="$(find hydra_ros)/launch/hydra.launch" pass_all_args="true">
        <arg name="config_dir" default="$(find hydra)/config/uhumans2"/>
        <arg name="dsg_output_prefix" default="uhumans2"/>
        <arg name="rviz_file" default="uhumans2.rviz"/>
        <arg name="override_default_lcd" default="true"/>
        <arg name="use_oriented_bounding_boxes" default="false"/>
        <arg name="use_2d_places" default="true"/>
    </include>

    <node pkg="tf2_ros" type="static_transform_publisher" name="fake_world_tf" args="0 0 0 0 0 0 1 map world" if="$(arg use_gt_frame)"/>

</launch>
